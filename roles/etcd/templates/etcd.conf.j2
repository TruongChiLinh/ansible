ETCD_NAME="{{ inventory_hostname }}"
ETCD_DATA_DIR="{{ etcd_data_dir }}"
ETCD_LISTEN_PEER_URLS="http://{{ ansible_host }}:{{ etcd_peer_port }}"
ETCD_LISTEN_CLIENT_URLS="http://{{ ansible_host }}:{{ etcd_port }},http://127.0.0.1:{{ etcd_port }}"
ETCD_INITIAL_ADVERTISE_PEER_URLS="http://{{ ansible_host }}:{{ etcd_peer_port }}"
ETCD_ADVERTISE_CLIENT_URLS="http://{{ ansible_host }}:{{ etcd_port }}"
ETCD_INITIAL_CLUSTER="{% for host in groups['kafka'] %}{{ host }}=http://{{ hostvars[host]['ansible_host'] }}:{{ etcd_peer_port }}{% if not loop.last %},{% endif %}{% endfor %}"
ETCD_INITIAL_CLUSTER_STATE="new"
ETCD_INITIAL_CLUSTER_TOKEN="etcd-cluster"
